# ===================================
# Supabase Configuration
# ===================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key

# ===================================
# API Configuration
# ===================================
REACT_APP_API_BASE_URL=https://your-api-domain.com

# ===================================
# Environment
# ===================================
REACT_APP_ENVIRONMENT=production
REACT_APP_APP_URL=https://your-app-domain.com

# ===================================
# Demo Mode Configuration
# ===================================
REACT_APP_DEMO_MODE=false

# ===================================
# Build Configuration
# ===================================
GENERATE_SOURCEMAP=false
CI=false

# ===================================
# PWA Configuration
# ===================================
REACT_APP_PWA_ENABLED=true

# ===================================
# Analytics & Monitoring
# ===================================
REACT_APP_ANALYTICS_ENABLED=true
REACT_APP_SENTRY_DSN=your-sentry-dsn

# ===================================
# Feature Flags
# ===================================
REACT_APP_ENABLE_REALTIME=true
REACT_APP_ENABLE_PDF_GENERATION=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_PDF_EXPORT=true
REACT_APP_ENABLE_PROJECT_MANAGEMENT=true
REACT_APP_ENABLE_INVOICE=true

# ===================================
# Third-party Services
# ===================================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-key
REACT_APP_STRIPE_PUBLISHABLE_KEY=your-stripe-key

# ===================================
# Security
# ===================================
# 強力な暗号化キーを設定してください（最低32文字以上の複雑な文字列）
REACT_APP_ENCRYPTION_KEY=your-strong-encryption-key-here-minimum-32-chars
REACT_APP_SECURITY_HEADERS=true
REACT_APP_CORS_ORIGIN=https://your-app-domain.com
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_CSRF_TOKEN_LENGTH=32

# CORS設定（複数のオリジンを許可する場合はカンマ区切り）
REACT_APP_ALLOWED_ORIGINS=https://your-app-domain.com,https://www.your-app-domain.com

# Development Authentication (DO NOT USE IN PRODUCTION)
# 開発環境でのみ使用。本番環境では必ず削除またはコメントアウトしてください
REACT_APP_DEV_ADMIN_EMAIL=admin@dev.local
# パスワードハッシュの生成方法: node -e "require('./src/utils/crypto').hashPassword('your-password').then(console.log)"
REACT_APP_DEV_ADMIN_PASSWORD_HASH=hashed_password_here
REACT_APP_DEV_EMPLOYEE_PREFIX=DEV-EMP

# File Upload Security
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_MAX_PHOTOS=5
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Content Security Policy
# 本番環境では 'unsafe-inline' と 'unsafe-eval' を削除することを推奨
REACT_APP_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.supabase.co; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

# ===================================
# Performance
# ===================================
REACT_APP_PERFORMANCE_MONITORING=false

# ===================================
# Phase Settings
# ===================================
REACT_APP_PHASE1=false
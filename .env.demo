# Garden DX System - Demo Environment

# ===================================
# Demo Mode Configuration
# ===================================
REACT_APP_DEMO_MODE=true
REACT_APP_ENVIRONMENT=demo

# ===================================
# Supabase Configuration (Demo Environment)
# ===================================
REACT_APP_SUPABASE_URL=https://demo-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=demo-anon-key-placeholder
REACT_APP_API_BASE_URL=https://demo-api.garden-dx.com

# ===================================
# Build Configuration
# ===================================
GENERATE_SOURCEMAP=false
CI=false

# ===================================
# Feature Flags (Demo Mode)
# ===================================
REACT_APP_ENABLE_REALTIME=false
REACT_APP_ENABLE_PDF_GENERATION=true
REACT_APP_ENABLE_NOTIFICATIONS=false

# ===================================
# PWA Configuration
# ===================================
REACT_APP_PWA_ENABLED=false

# ===================================
# Analytics & Monitoring (Disabled in Demo)
# ===================================
REACT_APP_ANALYTICS_ENABLED=false

# ===================================
# Demo User Settings
# ===================================
REACT_APP_DEFAULT_DEMO_USER=manager
REACT_APP_DEMO_COMPANY_NAME=緑化工業株式会社
REACT_APP_DEMO_SKIP_LOGIN=true

# ===================================
# Performance Optimization
# ===================================
REACT_APP_LAZY_LOAD_IMAGES=true
REACT_APP_ENABLE_CACHE=true
REACT_APP_BUNDLE_ANALYZER=false

# ===================================
# Vercel Configuration
# ===================================
VERCEL_ENV=preview
VERCEL_URL=garden-dx-demo.vercel.app
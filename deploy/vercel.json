{
  "version": 2,
  "name": "garden-landscaping-dx-system",
  "alias": ["garden-dx"],
  "description": "造園業DXシステム - 見積・工程管理・単価マスター統合システム",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/main.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "@react_app_api_url",
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "JWT_SECRET_KEY": "@jwt_secret_key",
    "ENCRYPTION_KEY": "@encryption_key"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "REACT_APP_VERSION": "1.0.0",
      "REACT_APP_BUILD_TIME": "$VERCEL_GITHUB_COMMIT_MESSAGE"
    }
  },
  "functions": {
    "backend/main.py": {
      "runtime": "python3.9",
      "maxDuration": 30,
      "memory": 1024,
      "env": {
        "LANDSCAPING_INDUSTRY_MODE": "true",
        "DEFAULT_TAX_RATE": "0.10",
        "CURRENCY": "JPY",
        "TIMEZONE": "Asia/Tokyo",
        "LOCALE": "ja_JP"
      }
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:;"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/dashboard",
      "permanent": false
    },
    {
      "source": "/admin",
      "destination": "/settings",
      "permanent": false  
    }
  ],
  "rewrites": [
    {
      "source": "/wizard",
      "destination": "/estimate-wizard"
    },
    {
      "source": "/price-master",
      "destination": "/price-master-management"
    }
  ],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  "regions": ["nrt1"],
  "cleanUrls": true,
  "trailingSlash": false
}